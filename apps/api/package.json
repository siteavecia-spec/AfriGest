    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.5.4",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.15",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "supertest": "^7.0.0",
    "autocannon": "^7.15.0"
