# Server
PORT=4000
NODE_ENV=development

# Auth
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
RESET_TOKEN_SECRET=change_me_reset

# Master DB
MASTER_DATABASE_URL=postgresql://afrigest_master_user:password@localhost:5432/afrigest_master
# Tenant DB (used by tenant resolvers and services)
TENANT_DATABASE_URL=postgresql://afrigest_tenant_user:password@localhost:5432/afrigest_tenant_demo
# Toggle DB usage (true to use Postgres; false enables in-memory demo where supported)
USE_DB=false

# CORS (comma-separated origins in non-dev)
ALLOWED_ORIGINS=http://localhost:5174

# Public web base URL (used in notifications/links)
WEB_URL=http://localhost:5174

# Stripe (optional for real payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# AWS/S3 (optional for media uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_REGION=eu-west-3
S3_BUCKET=afrigest-private
S3_KEY_PREFIX=uploads/

# CloudFront (optional for signed URLs)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=
CLOUDFRONT_SIGNED_URL_TTL_SECONDS=300
