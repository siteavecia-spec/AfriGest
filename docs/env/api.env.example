# Server
PORT=4000
NODE_ENV=development

# Auth
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
RESET_TOKEN_SECRET=change_me_reset

# Master DB
MASTER_DATABASE_URL=postgresql://afrigest_master_user:password@localhost:5432/afrigest_master

# CORS (comma-separated origins in non-dev)
ALLOWED_ORIGINS=http://localhost:5173

# Stripe (optional for real payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# AWS/S3 (optional for private media)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-3
S3_BUCKET_PRIVATE=afrigest-private

# CloudFront (optional for signed URLs)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=
CLOUDFRONT_SIGNED_URL_TTL_SECONDS=300
